# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://r2s_user:password@localhost:5432/r2s_dev
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Blockchain
BLOCKCHAIN_RPC_URL=https://public-en-kairos.node.kaia.io
BLOCKCHAIN_CHAIN_ID=1001
BLOCKCHAIN_NETWORK=kairos

# Contract Addresses
CAMPAIGN_FACTORY_ADDRESS=0x...
USDT_ADDRESS=0x...
REBATE_POOL_ADDRESS=0x...
DISTRIBUTOR_ADDRESS=0x...

# Gas Fee Delegation
FEEPAYER_PRIVATE_KEY=0x...
FEEPAYER_ADDRESS=0x...
MAX_GAS_PRICE=250000000000

# DappPortal API
DAPPPORTAL_API_BASE=https://api.dappportal.io
DAPPPORTAL_API_KEY=your-api-key
DAPPPORTAL_CLIENT_SECRET=your-client-secret
NEXT_PUBLIC_CLIENT_ID=your-client-id

# LINE Authentication
LINE_CHANNEL_ID=2006543970
LINE_CHANNEL_SECRET=your-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-access-token

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Webhook
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# API Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# AWS S3 (for receipts)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=r2s-receipts

# App URL
APP_URL=https://r2s.io