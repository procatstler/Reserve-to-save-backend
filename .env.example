# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/r2s_dev?sslmode=disable
REDIS_URL=redis://localhost:6379

# Server Ports
AUTH_SERVER_PORT=3001
API_GATEWAY_PORT=3000
CORE_SERVER_PORT=3002
QUERY_SERVER_PORT=3003
BATCH_SERVER_PORT=3004
EVENT_RECEIVER_PORT=3005
TX_HELPER_PORT=3006
DEMO_PORT=3008

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://public-en.node.kaia.io
BLOCKCHAIN_WS_URL=wss://public-en.node.kaia.io/ws
CHAIN_ID=8217

# Contract Addresses (Replace with actual deployed addresses)
CAMPAIGN_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
USDT_ADDRESS=0x0000000000000000000000000000000000000000

# LINE Integration
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_LIFF_ID=your-liff-id
LINE_LOGIN_CALLBACK_URL=https://your-domain.com/callback

# External APIs
COINGECKO_API_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@r2s.com

# Batch Processing
BATCH_SETTLEMENT_ENABLED=false
BATCH_SETTLEMENT_CRON=0 0 * * *
BATCH_CLEANUP_CRON=0 2 * * *

# Event Processing
EVENT_PROCESSOR_ENABLED=false
EVENT_START_BLOCK=0
EVENT_CONFIRMATION_BLOCKS=3

# Demo Mode
DEMO_MODE=true
DEMO_AUTO_SEED=false